{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true // <-- Add this line
  },
  "include": [
    "src/**/*.ts",
    "views/json/*.json" // <-- Optional: Explicitly include JSON for clarity, though resolveJsonModule often makes it work implicitly
  ],
  "exclude": [
    "node_modules"
  ]
}
